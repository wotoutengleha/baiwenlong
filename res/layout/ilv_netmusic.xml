<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res/com.esint.music"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/backgroundRecord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.96" >

            <ImageView
                android:id="@+id/record"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/record3"
                android:visibility="gone" />

            <TextView
                android:id="@+id/title_net"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dip"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:paddingBottom="10dip"
                android:paddingTop="10dip"
                android:singleLine="true"
                android:text="筷子兄弟"
                android:textColor="#336598" />

            <TextView
                android:id="@+id/fengexian"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_toRightOf="@id/title_net"
                android:gravity="center_vertical"
                android:paddingBottom="10dip"
                android:paddingTop="10dip"
                android:text="-"
                android:textColor="#336598" />

            <TextView
                android:id="@+id/songname_net"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_toRightOf="@id/fengexian"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:paddingBottom="10dip"
                android:paddingTop="10dip"
                android:singleLine="true"
                android:text="小苹果"
                android:textColor="#336598" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" >

            <ImageView
                android:id="@+id/arrowDown"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="right"
                android:src="@drawable/img_right_menu_arrow_down1" />

            <ImageView
                android:id="@+id/arrowUp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="right"
                android:src="@drawable/img_right_menu_arrow_up1"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

    <com.esint.music.view.RoundProgressBar
        android:layout_marginTop="150dp"
        android:id="@+id/roundProgressBar2"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android_custom:roundColor="#D1D1D1"
        android:layout_gravity="center_horizontal"
        android_custom:roundProgressColor="@android:color/black"
        android_custom:roundWidth="10dip"
        android_custom:textColor="#9A32CD"
        android:visibility="gone"
        android_custom:textSize="18sp" />

</LinearLayout>